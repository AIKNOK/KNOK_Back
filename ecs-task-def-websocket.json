{
  "family": "knok-websocket-test",
  "taskRoleArn": "arn:aws:iam::257120632536:role/knokTaskRoleWithS3", 
  "executionRoleArn": "arn:aws:iam::257120632536:role/ecsTaskExecutionRole",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "containerDefinitions": [
    {
      "name": "knok-websocket-test",
      "image": "${IMAGE_URI}",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8001,
          "protocol": "tcp"
        }
      ],
      "environment": [
        { "name": "AWS_ACCESS_KEY_ID", "value": "${AWS_ACCESS_KEY_ID}" },
        { "name": "AWS_AUDIO_BUCKET_NAME", "value": "live-stt" },
        { "name": "AWS_REGION", "value": "${AWS_REGION}" },
        { "name": "AWS_SECRET_ACCESS_KEY", "value": "${AWS_SECRET_ACCESS_KEY}" },
        { "name": "DJANGO_API_URL", "value": "https://api.ai-knok.com/api/save_transcribed_text/" }
      ],

      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/knok-websocket-test",
          "awslogs-region": "ap-northeast-2",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
